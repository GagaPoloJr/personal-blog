---
import SocialMedia from '../SocialMedia.astro';
import ButtonModal from '../button/ButtonModal';
---

<div class="flex items-center justify-center flex-col">
  <div class="tracking-wider text-center">
    <span class="text-md md:text-xl font-extrabold">Hi 🧞‍♀️</span>
    <span class="text-md md:text-xl"> I’m a Writer in Different Styles</span>
  </div>
  <h1 class="text-2xl md:text-5xl font-extrabold text-black text-center mb-7">M. Haikal Rahmadi</h1>
  <SocialMedia />
  <ButtonModal client:load />
</div>

<style>
  .button-read:hover .icon {
    margin-left: 0;
    opacity: 1;
  }
  .icon {
    opacity: 0;
    margin-left: -20px;
    transition: all 300ms;
  }
</style>
