---
export type Props = {
  pageSlug: string
  pageTtile: string
}

const { pageSlug, pageTtile } = Astro.props

const navigation = [
  {
    title: 'Home',
    url: 'home'
  },
  {
    title: 'Blog',
    url: 'About'
  },
  {
    title: 'Home',
    url: 'home'
  }
]
---

<div class="navbar-nav w-full mx-auto  relative z-10">
  <nav class="navbar-glass border-gray-200 px-2 mb-10 px-10 py-5 rounded-lg">
    <div class="hidden md:flex justify-between items-center w-full md:w-auto md:order-1" id="mobile-menu-3">
      <ul class="flex-col md:flex-row flex md:space-x-8 mt-4 md:mt-0 md:text-sm md:font-medium">
        {
          navigation.map(({ title, url }) => (
            <li>
              <a
                href={url}
                class="bg-blue-700 md:bg-transparent text-md text-bold font-extrabold block pl-3 pr-4 py-2 md:p-0 rounded"
                aria-current="page"
              >
                {title}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </nav>
</div>
