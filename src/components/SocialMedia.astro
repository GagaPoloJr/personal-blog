---
import { Icon } from "astro-icon";
const sosmedData = [
  {
    icon: "instagram",
    link: "instagram",
  },
  {
    icon: "linkedin",
    link: "linkedin",
  },
  {
    icon: "twitter",
    link: "twitter",
  },
  {
    icon: "facebook",
    link: "facebook",
  },
];
---

<div class="flex gap-5 w-full justify-center  mb-10 md:mb-16">
  {
    sosmedData.map((data) => (
      <a
        class="transition-all duration-300 ease-in-out hover:text-violet-500 hover:scale-125"
        href="#"
      >
        <span>
          <Icon pack="mdi" name={data.icon} size={20} />
        </span>
      </a>
    ))
  }
</div>
